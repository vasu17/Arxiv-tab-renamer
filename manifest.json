{
  "manifest_version": 3,
  "name": "ArXiv Title Fixer",
  "version": "1.0",
  "description": "Automatically renames ArXiv PDF tabs with the actual paper title.",
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}